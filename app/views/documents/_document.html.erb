<h4>
  <%
    summary = textilizable(truncate_lines(document.description), :object => document)
    summary = summary.gsub("\"", "'")
    summary = summary.gsub(/<img .* \/>/, "")
    summary = summary.gsub(/<p> *<\/p>/, "")
    summary = summary.strip

    if summary.empty?
        concat link_to h(document.title), document_path(document)
    else
        concat link_to h(document.title), document_path(document), :"data-ot" => summary
    end
  %>
  <span style="float:right; font-size:11px;"><em><%= format_time(document.updated_on) %></em></span>
</h4>
